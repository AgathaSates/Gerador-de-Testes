@model VisualizarTesteViewModel

<div class="container">
    <h1 class="text-center my-4 fw-bold">
        <i class="bi bi-clipboard-check-fill"></i> Testes
    </h1>
    <p class="text-center lead text-muted fw-semibold">Gerencie aqui os testes disponíveis no sistema.</p>

    <div class="d-flex justify-content-start mb-3">
        <a asp-action="cadastrar" class="btn btn-adicionar btn-md">
            <i class="bi bi-plus-circle"></i> Adicionar novo teste
        </a>
    </div>

    <hr />

    <div class="row gx-2 gy-2">
        @foreach (var item in Model.Testes)
        {
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <p class="card-text mb-3 fs-5">
                            <span class="fw-bold">Titulo:</span> @((item.Titulo!= null && item.Titulo.Length > 44) ? item.Titulo.Substring(0, 44) + "..." : item.Titulo)
                        </p>
                        <p class="card-text mb-3 fs-5">
                            <span class="fw-bold">Disciplina:</span> @(item.Disciplina.ToString())
                        </p>

                        <div class="d-flex justify-content-end gap-1">
                            <a asp-action="detalhes" asp-route-id="@item.Id" class="btn btn-secondary" title="Detalhes">
                                <i class="bi bi-eye"></i>
                            </a>

                            <a asp-action="duplicar" asp-route-id="@item.Id" class="btn btn-primary" title="Duplicar">
                                <i class="bi bi-files"></i>
                            </a>

                            <a asp-action="excluir" asp-route-id="@item.Id" class="btn btn-danger" title="Excluir">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>
